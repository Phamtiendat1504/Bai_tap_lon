<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Thue_tro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Ghi đè style của Button -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Style tùy chỉnh cho Button -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item> <!-- Loại bỏ màu nền mặc định từ theme -->
        <item name="android:background">@null</item> <!-- Đảm bảo không có background mặc định -->
        <item name="android:textColor">@color/black</item> <!-- Màu chữ mặc định -->
    </style>

    <style name="Theme.Thue_tro" parent="Base.Theme.Thue_tro" />
</resources>